<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>annotations</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
		<AngularAppPath>../../webpage</AngularAppPath>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.OpenApi" Version="9.0.0" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

	<Target Name="BuildAngular" BeforeTargets="Build">
		<PropertyGroup>
      <AngularConfiguration Condition="'$(Configuration)' == 'Debug'">development</AngularConfiguration>
      <AngularConfiguration Condition="'$(Configuration)' == 'Release'">production</AngularConfiguration>
    </PropertyGroup>
		<Exec Command="ng build --configuration $(AngularConfiguration) --output-path=&quot;$(ProjectDir)wwwroot&quot;" WorkingDirectory="$(AngularAppPath)" />
	</Target>

</Project>
